{
  "name": "sijs",
  "version": "0.1.3",
  "description": "A view library. Reinvent.",
  "repository": {
    "type": "git",
    "url": "https://github.com/faisalhakim47/sijs.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run build:watch\"",
    "build": "concurrently --kill-others \"npm run build-common\" \"npm run build-amd\"",
    "build:watch": "concurrently --kill-others \"npm run build-common:watch\" \"npm run build-amd:watch\"",
    "build-common": "tsc -t es3 -m commonjs --rootDir src --outDir lib --sourceMap -d",
    "build-common:watch": "npm run build-common -- -w",
    "build-amd": "tsc -t es3 -m amd --outFile lib/amd.full.js --sourceMap -d src/browser.ts src/common.ts",
    "build-amd:watch": "npm run build-amd -- -w",
    "test": "karma start",
    "babel": "babel es5 --out-dir dist --watch",
    "compile": "rm -rf ./es5/* && rm -rf ./dist/* && node ./node_modules/concurrently/src/main.js --kill-others \"npm run tsc\" \"npm run babel\""
  },
  "keywords": [
    "view",
    "library"
  ],
  "author": "Faisal Hakim <faisalhakim47@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "gulp-babel": "^6.1.2",
    "karma": "^1.1.0",
    "karma-browserify": "^5.0.5",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.1.1",
    "mocha": "^2.5.3",
    "ts-loader": "^0.8.2",
    "webpack": "^1.13.1"
  }
}