{
  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "*.js",
    "*.d.ts"
  ],
  "files": [
    "src/browser.ts",
    "src/server.ts",
    "src/common.ts"
  ],
  "compileOnSave": true
}
