{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es3",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "*.js",
    "*.d.ts"
  ],
  "files": [
    "src/browser.ts",
    "src/server.ts",
    "src/common.ts"
  ],
  "compileOnSave": true
}
